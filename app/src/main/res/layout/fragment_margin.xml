<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/bg_black"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        tools:context=".View.Activities.MainActivity">

        <androidx.cardview.widget.CardView
            android:id="@+id/equity"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="80dp"
            android:onClick="onMarginFragment"
            app:cardBackgroundColor="@color/bg_blue"
            app:cardCornerRadius="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="69dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="25dp"
                android:foregroundGravity="center"
                android:src="@drawable/ic_equity" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:layout_marginEnd="33dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/aileron_semibold"
                android:gravity="center"
                android:text="Equity"
                android:textColor="@color/bg_white"
                android:layout_gravity="bottom|center"

                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/commodity"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="40dp"
            android:onClick="onMarginFragment"
            app:cardBackgroundColor="@color/bg_blue"
            app:cardCornerRadius="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="54dp"
                android:layout_height="61dp"
                android:layout_marginStart="31dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="31dp"
                android:foregroundGravity="center"
                android:src="@drawable/ic_commodity" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/aileron_semibold"
                android:gravity="center"
                android:text="Commodity"
                android:textColor="@color/bg_white"
                android:layout_gravity="bottom|center"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/futures"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="60dp"
            android:onClick="onMarginFragment"

            app:cardBackgroundColor="@color/bg_blue"
            app:cardCornerRadius="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/equity">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="23dp"
                android:src="@drawable/ic_futures" />

            <TextView
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/aileron_semibold"
                android:gravity="center"
                android:text="Futures"
                android:textColor="@color/bg_white"
                android:textSize="16sp"
                android:layout_gravity="bottom|center" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/currency"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="40dp"
            android:onClick="onMarginFragment"
            app:cardBackgroundColor="@color/bg_blue"
            app:cardCornerRadius="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/commodity">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="27dp"
                android:src="@drawable/ic_currency" />

            <TextView
                android:layout_width="98dp"
                android:layout_height="21dp"
                android:layout_marginStart="11dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/aileron_semibold"
                android:gravity="center"
                android:text="Currency"
                android:textColor="@color/bg_white"
                android:layout_gravity="bottom|center"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/bracket"
            android:layout_width="120dp"
            android:layout_height="120dp"

            android:layout_marginStart="8dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="80dp"
            android:foregroundGravity="center"
            android:onClick="onMarginFragment"
            app:cardBackgroundColor="@color/bg_blue"
            app:cardCornerRadius="19dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/currency">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="61dp"
                android:layout_height="41dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="23dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="23dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_bracket_icon" />

            <TextView
                android:layout_width="161dp"
                android:layout_height="53dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/aileron_semibold"
                android:gravity="center"
                android:text="@string/bracket_order"
                android:textColor="@color/bg_white"
                android:layout_gravity="bottom|center_horizontal"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    a
</androidx.core.widget.NestedScrollView>