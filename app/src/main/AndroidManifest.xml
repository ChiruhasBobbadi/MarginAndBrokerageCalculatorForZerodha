<?xml version="1.0" encoding="utf-8"?>


<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.chiruhas.android.zerodha">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <meta-data
        android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />

    <application
        xmlns:tools="http://schemas.android.com/tools"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/app_id"/>

        <activity android:name="com.chiruhas.android.zerodha.View.Activities.AboutActivity"
            android:parentActivityName="com.chiruhas.android.zerodha.View.Activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.chiruhas.android.zerodha.View.Activities.CommodityActivity"
            android:parentActivityName="com.chiruhas.android.zerodha.View.Activities.MainActivity" />
        <activity
            android:name="com.chiruhas.android.zerodha.View.Brokerage.equity.EquityBrokerage"
            android:label="@string/title_activity_equity_brokerage"
            android:parentActivityName="com.chiruhas.android.zerodha.View.Activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.chiruhas.android.zerodha.View.Activities.BookmarkActivity"
            android:label="@string/title_activity_bookmark"
            android:parentActivityName="com.chiruhas.android.zerodha.View.Activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.chiruhas.android.zerodha.View.Activities.MainActivity"

            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.chiruhas.android.zerodha.View.Activities.EquityActivity"
            android:parentActivityName="com.chiruhas.android.zerodha.View.Activities.MainActivity" />
    </application>

</manifest>